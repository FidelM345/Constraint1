<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fidelmomolo.constraint.MainActivity">

  <android.widget.LinearLayout
      android:id="@+id/layer1"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView

          android:layout_width="0dp"
          android:paddingLeft="10dp"
          android:text="Name:"
          android:layout_weight="1"
          android:layout_height="wrap_content" />

      <EditText
          android:id="@+id/edit_name"
          android:paddingRight="10dp"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:hint="Enter Name"
          android:layout_height="wrap_content" />




  </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:layout_below="@id/layer1"
        android:id="@+id/layer2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:text="Surname:"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_surname"
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Enter Surname"

            android:layout_height="wrap_content" />




    </android.widget.LinearLayout>


    <android.widget.LinearLayout
        android:layout_below="@id/layer2"
        android:id="@+id/layer3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:text="Marks:"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Enter Marks"
            android:id="@+id/edit_marks"
            android:layout_height="wrap_content" />

    </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:layout_below="@id/layer3"
        android:id="@+id/layer6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:text="ID:"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:hint="Enter ID"
            android:id="@+id/edit_id"
            android:layout_height="wrap_content" />

    </android.widget.LinearLayout>




    <android.widget.LinearLayout
        android:layout_below="@id/layer6"
        android:id="@+id/layer4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
          android:id="@+id/add_data"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:text="Add"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="View all"
            android:id="@+id/button_view"
            android:layout_height="wrap_content" />




    </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:layout_below="@id/layer4"
        android:id="@+id/layer5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/update_data"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:text="Update Data"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:paddingRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Delete Data"
            android:id="@+id/delete_data"
            android:layout_height="wrap_content" />




    </android.widget.LinearLayout>

    <ListView
        android:layout_below="@+id/layer5"
        android:id="@+id/list55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</android.widget.RelativeLayout>
